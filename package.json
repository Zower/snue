{
  "name": "snui",
  "productName": "SnUI",
  "version": "1.0.0",
  "description": "A desktop reddit application",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "postinstall": "patch-package"
  },
  "keywords": [],
  "author": {
    "name": "Eirik Tobiassen",
    "email": "eirik@2park.no"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "devContentSecurityPolicy": "connect-src * 'unsafe-eval'",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "preload": "",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./electron/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "6.0.0-beta.63",
    "@types/jsdom": "^16.2.14",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/sanitize-html": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "electron": "17.0.0",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "html-loader": "^3.1.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.2",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "1.23.4",
    "@mozilla/readability": "^0.4.1",
    "formik": "^2.2.9",
    "node-fetch": "3.2.0",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sanitize-html": "^2.7.0",
    "snoowrap": "https://github.com/Zower/snoowrap.git",
    "stream-browserify": "^3.0.0"
  }
}
